<h1>Listing people</h1>

<table>
  <tr>
    <th>Rank</th>
    <th>Impact</th>
    <th>Name</th>
    <th>Age</th>
    <th>Country</th>
    <th>Status</th>
    <th>Parent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.rank %></td>
    <td><%= person.impact.count %></td>
    <td><%= person.name %></td>
    <td><%= person.age %></td>
    <td><%= person.country %></td>
    <td><%= person.status %></td>
    <td><%= person.parent.name unless person.root? == true %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

