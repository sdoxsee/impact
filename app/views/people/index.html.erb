<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th>Parent</th>
    <th>Impact</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.age %></td>
    <td><%= person.parent.name unless person.parent == nil %></td>
    <td><%= person.descendants.count unless person.descendants == nil %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

